{
    "manifest_version": 3,
    "name": "Scream to Unlock: yell to unblock social media",
    "description": "A productivity tool that blocks social media websites and makes you say embarrassing things to unlock them",
    "author": "Pankaj Tanwar",
    "version": "1.0",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "*://*.facebook.com/*",
        "*://*.instagram.com/*",
        "*://*.twitter.com/*",
        "*://*.x.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.facebook.com/*",
                "*://*.instagram.com/*",
                "*://*.twitter.com/*",
                "*://*.x.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "16": "images/icon.png",
        "32": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
    }
}